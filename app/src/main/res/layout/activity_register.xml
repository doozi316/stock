<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.ijangmin.stock.RegisterActivity">

    
    <ImageView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:src="@drawable/register_img"

        android:layout_marginBottom="40dp"
        android:layout_above="@id/idText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/idText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="ID"
        android:inputType="text"
        android:textSize="16dp"
        android:ems="10"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"

        android:layout_marginBottom="30dp"
        android:layout_above="@id/passwordText"
        android:layout_alignLeft="@id/passwordText"/>

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:inputType="text"
        android:textSize="16dp"
        android:ems="10"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"

        android:layout_marginBottom="30dp"
        android:layout_above="@id/nameText"
        android:layout_alignLeft="@id/nameText"/>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Name"
        android:inputType="text"
        android:textSize="16dp"
        android:ems="10"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name"

        android:layout_centerInParent="true"

        />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:inputType="text"
        android:textSize="16dp"
        android:ems="10"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_email"

        android:layout_marginTop="30dp"
        android:layout_below="@id/nameText"
        android:layout_alignLeft="@id/nameText"/>

    <EditText
        android:id="@+id/phoneText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Phone Number"
        android:inputType="text"
        android:textSize="16dp"
        android:ems="10"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_phonenumber"

        android:layout_marginTop="30dp"
        android:layout_below="@id/emailText"
        android:layout_alignLeft="@id/emailText"/>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView_register"
        android:layout_marginTop="50dp"
        android:layout_below="@id/phoneText"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="22sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/returnbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registerd! Login me"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />



</RelativeLayout>

